generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(SOCIO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
  Parking Parking[]
  Vehicle Vehicle[]
}

enum Role {
  ADMIN
  SOCIO
}


model Parking {
  id           Int      @id @default(autoincrement())
  nombre       String
  capacidad    Int
  costoPorHora Decimal
  socioId      Int
  socio        User     @relation(fields: [socioId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  vehicles     Vehicle[] // Relaci√≥n con ingresos de vehiculos
  VehicleHistory VehicleHistory[]
  
  @@map("parkings")
  
}

model Vehicle {
  id           Int       @id @default(autoincrement())
  placa        String    @db.VarChar(6) // La placa debe tener 6 caracteres
  fechaIngreso DateTime  @default(now())
  fechaSalida  DateTime?
  parqueaderoId Int
  socioId      Int 
  parqueadero  Parking   @relation(fields: [parqueaderoId], references: [id])
  socio        User     @relation(fields: [socioId], references: [id])

  @@unique([placa, fechaSalida]) //nullo solo si fechasalida=null
  @@map("vehicles")
}

model VehicleHistory {
  id           Int      @id @default(autoincrement())
  placa        String   @db.VarChar(6)
  fechaIngreso DateTime
  fechaSalida  DateTime
  parqueaderoId Int
  costo        Decimal  @default(0.0)
  parqueadero  Parking  @relation(fields: [parqueaderoId], references: [id])

  @@map("vehicle_history")
}